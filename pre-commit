#!/bin/bash
set -e

RELEASE=1.13.0
JAR_NAME="google-java-format-${RELEASE}-all-deps.jar"
RELEASES_URL=https://repo1.maven.org/maven2/com/google/googlejavaformat/google-java-format
JAR_URL="${RELEASES_URL}/${RELEASE}/${JAR_NAME}"

CACHE_DIR="$HOME/.cache/google-java-format-git-pre-commit-hook"
JAR_FILE="$CACHE_DIR/$JAR_NAME"
JAR_DOWNLOAD_FILE="${JAR_FILE}.tmp"
JAR_PGP_ASC_FILE="${JAR_FILE}.asc"
PGP_SIGN_KEY_ID=E77417AC194160A3FABD04969A259C7EE636C5ED

if [[ ! -f "$JAR_FILE" ]]
then
    mkdir -p "$CACHE_DIR"
    curl -L "$JAR_URL" -o "$JAR_DOWNLOAD_FILE"

    # Downloaded from: "${JAR_URL}.asc"
    cat >"$JAR_PGP_ASC_FILE" <<EOF
-----BEGIN PGP SIGNATURE-----

iQIzBAABCgAdFiEE53QXrBlBYKP6vQSWmiWcfuY2xe0FAmGYKGMACgkQmiWcfuY2
xe0hvw/+OvnNsoZUMoeNArCCbFw+FjuTQheKi6CsgkXdZLu2y1y2aN7NgJiRbUEN
EJg5qJEKbXIQA5XWPcRpbbdSmzEPjIljPdRUdmQVH+iAJVRHJZJujKi5Vt4d6yer
qK7XX1XUbUYS+DHTH30pKNbnGhl2q01ND3qFHB62zw5JMyItBJz/0d6DDgf30IkO
cAu4vDqO865lpYMY0uyT/l1ISSr4c+CeSBd0PzsYqQrhtpZZnmJKZ2Yy9luNCL0/
VP2/sL4YaUL2y/A8T267K8MmJKV509sn3cqAhFGJCz3/lay/Vrp4VIQO5gC3Y9GY
5WNr6OiQedu4saoXHNG40QvgQIqg9Vb+X7XMZtGQwCMnWqReuN+EAL3CdtBrWAIi
04dctO/PiCOg1nMxtpWTC7X87msOyBTnPTnhXKgLbWKdWFR+iBecxt1FxIXXvO23
YrF6tPILOTFiveS+Xa2Zj5tyvy4jRkGGd42Ahdub6Tvd4EamDffoqClMzm/kELe+
+qeo4DCb9vj9gda5wQekX8gbCYgdL/lr2RZixaQNBc0jOEEloJcsifpftZschh7N
NtZJrW0qSHIhWFtH/zqwzQifodvnwwQH9nJAZuAW72A2A2i/WnFVZJpg1vIcRj8M
qaXTKh93EsCMMdWoDnzE8B2P9mdJpZWsVdofxVrGdxwaZtc60f4=
=lBZ9
-----END PGP SIGNATURE-----
EOF

    if ! gpg --list-keys "$PGP_SIGN_KEY_ID"
    then
        gpg --keyserver hkps://keyserver.ubuntu.com --recv-key "$PGP_SIGN_KEY_ID"
    fi
    gpg --verify "$JAR_PGP_ASC_FILE" "$JAR_DOWNLOAD_FILE"
    mv "$JAR_DOWNLOAD_FILE" "$JAR_FILE"
fi

changed_java_files=$(git diff --cached --name-only --diff-filter=ACMR | grep ".*java$" || true)
if [[ -n "$changed_java_files" ]]
then
    echo "Reformatting Java files: $changed_java_files"
    if ! java   --add-exports jdk.compiler/com.sun.tools.javac.api=ALL-UNNAMED \
                --add-exports jdk.compiler/com.sun.tools.javac.file=ALL-UNNAMED \
                --add-exports jdk.compiler/com.sun.tools.javac.parser=ALL-UNNAMED \
                --add-exports jdk.compiler/com.sun.tools.javac.tree=ALL-UNNAMED \
                --add-exports jdk.compiler/com.sun.tools.javac.util=ALL-UNNAMED \
                -jar "$JAR_FILE" --replace --set-exit-if-changed $changed_java_files
    then
        echo "An error occured, aborting commit!" >&2
        exit 1
    fi
else
    echo "No Java files changes found."
fi
